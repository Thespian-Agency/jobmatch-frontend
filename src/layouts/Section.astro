---
interface Props {
  className?: string;
  pt?: boolean;
  pb?: boolean;
  id?: string;
}

const { className, pt = false, pb = false, id } = Astro.props;
---

<section
  class:list={[
    "flex relative tablet:px-80 max-w-screen-xldesktop px-16 w-full justify-center",
    {
      "desktop:pt-128 tablet:pt-64 mobile:pt-32": pt,
      "desktop:pb-128 tablet:pb-64 mobile:pb-32": pb,
    },
  ]}
  id={id}
>
  <div class:list={["flex container w-full", className]}>
    <slot />
  </div>
</section>
